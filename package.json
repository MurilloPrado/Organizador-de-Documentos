{
  "name": "organizadordocumentos",
  "version": "0.2.4",
  "description": "Organizador de documentos",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "clean": "Remove-Item -Recurse -Force dist -ErrorAction SilentlyContinue",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.organizadordocumentos.app",
    "productName": "Organizador de Documentos",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "main/**/*",
      "renderer/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "renderer/assets/J1J.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "MurilloPrado",
        "repo": "Organizador-de-Documentos"
      }
    ]
  },
  "keywords": [
    "electron",
    "documentos",
    "js"
  ],
  "author": "Murillo",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "electron": "^38.4.0",
    "electron-builder": "^26.0.12"
  }
}
