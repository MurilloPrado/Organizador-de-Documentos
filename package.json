{
  "name": "organizadordocumentos",
  "version": "0.0.1",
  "description": "Organizador de documentos",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.organizadordocumentos.app",
    "productName": "Organizador Documentos",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "main/**/*",
      "renderer/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },

    "publish": [
      { "provider": "github", "owner": "MurilloPrado", "repo": "Organizador-de-Documentos" }
    ]
  },
  "keywords": [
    "electron",
    "documentos",
    "js"
  ],
  "author": "Murillo",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^12.2.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "builder": "^5.0.0",
    "electron": "^38.4.0",
    "electron-updater": "^6.6.2"
  }
}
